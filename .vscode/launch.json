{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Test Mistral MTP Model",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_mistral_mtp_model.py",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}